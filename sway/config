set $mod Mod4
set $term alacritty
set $browser brave
set $wallpaper ~/Pictures/wallpaper.jpg
set $highlight #3daee9
set $prompt #18b218
set $menu dmenu_run

output HDMI-A-1 pos 0 0 res 2560x1080
