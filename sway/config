set $lock swaylock -f -i $wallpaper -s fill

bindsym $mod+Return exec $term
bindsym $mod+q kill
bindsym $mod+d exec $menu
bindsym $mod+Shift+c reload
floating_modifier $mod normal
bindsym $mod+Shift+space floating toggle

bindsym $mod+p exec bitwarden-dmenu --dmenu-args='-i' --clear-clipboard 30 --session-timeout 100 --sync-vault-after 3600 --on-error 'xargs notify-send --urgency=low'
bindsym $mod+Shift+p exec shutdown now
bindsym $mod+t exec torbrowser-launcher
bindsym $mod+Shift+s exec sudo systemctl suspend
bindsym $mod+n exec $term -e ~/.config/lf/lfub
bindsym $mod+v exec codium
bindsym $mod+g exec htop
bindsym $mod+s exec signal-desktop

bindsym $mod+m exec $browser https://mail.tutanota.com
bindsym $mod+b exec $term -e newsboat
#bindsym $mod+x exec $term -e /home/ben/Documents/Programming/git/cryptowatch/target/release/cryptowatch XMR/USDT BTC/USDT ETH/USDT
bindsym $mod+c exec $term -e cmus

bindsym $mod+i exec $term -e nvim ~/.config/sway/config
bindsym $mod+w exec $browser

bindsym Shift+Print exec grim -g "$(slurp)" - | wl-copy

bindsym XF86AudioRaiseVolume exec amixer sset 'Master' 2%+
bindsym XF86AudioLowerVolume exec amixer sset 'Master' 2%-
bindsym XF86AudioMute exec amixer set Master 1+ toggle && amixer set Headphone 1+ toggle && amixer set Headphone,1 1+ toggle

bindsym XF86AudioPlay exec cmus-remote -u #playerctl play-pause
bindsym XF86AudioNext exec cmus-remote -n #playerctl next
bindsym XF86AudioPrev exec cmus-remote -r #playerctl previous
bindsym XF86AudioStop exec cmus-remote -s #playerctl stop
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
